doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Lead Management System
    link(rel="stylesheet" href="css/style.css")

  body
  .dashboard
    header.header
      .logo LMS
      input.search-bar(type="text" placeholder="Search...")
      .user-profile
        img(src="profile.jpg" alt="User Profile")
        .dropdown
          a(href="#") Settings
          a(href="#") Profile
          a(href="#") Logout
    aside.sidebar
      nav
        ul
          li: a(href="#") Dashboard
          li: a(href="#") Leads
          li: a(href="#") Accounts
          li: a(href="#") Contacts
          li: a(href="#") Reports
          li: a(href="#") Settings
    main.content
      .overview
        .card Total Leads: 120
        .card Active Leads: 45
        .card Won Deals: 30
        .card Pending Follow-ups: 20
      .activity-feed
        h2 Recent Activities
        ul
          li Called John Doe
          li Added note for Lead XYZ
          li Scheduled meeting with Acme Corp
      .leads-page
        header.toolbar
          button.btn(onclick="openAddNewLeadPopup()") Add New Lead
          select.filter
            option Stage
            option Source
            option Owner
          button.btn Sort

        
        table.leads-table
          thead
            tr
              th Lead Name
              th Lead Date
              th Contact
              th Lead Type
              th Source
              th Assigned To
              th Actions

          each lead in leads
            tbody
              tr
                td
                  a.leadNameHeader(href=`/leads/${lead.leadName}`)= `${lead.leadName}`
                td= `${lead.leadDate.toLocaleDateString('de-DE')}`
                td= `${lead.pointOfContact[0].email}`
                td= `${lead.leadType}`
                td= `${lead.source}`
                td= `${lead.assignedTo}`
                td
                  button Edit
                  button Delete

